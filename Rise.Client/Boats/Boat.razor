@page "/boats"
@using Rise.Shared.Boats
@using Rise.Shared.Bookings
@attribute [Authorize(Roles = "Admin")]
@inject IEquipmentService<BoatDto.ViewBoat, BoatDto.NewBoat> BoatService
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Boat> Localizer

<EquipmentList TView="BoatDto.ViewBoat"
               TNew="BoatDto.NewBoat"
               Service="BoatService"
               GetName="battery => battery.name"
               GetCount="battery => battery.countBookings"
               GetComments="battery => battery.listComments"
               Localizer="Localizer"  />

